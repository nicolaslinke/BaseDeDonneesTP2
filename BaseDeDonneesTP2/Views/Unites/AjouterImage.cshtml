@model BaseDeDonneesTP2.ViewModel.ImageUploadVM

@{
    ViewData["Title"] = "AjouterImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<a asp-action="Index">Retour à l'index</a>
<h2>Ajouter une image à l'unité</h2>

<form asp-action="AjouterImage" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Unite.Nom" class="control-label"></label>
        <input asp-for="Unite.Nom" class="form-control" />
        <span asp-validation-for="Unite.Nom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FormFile">Fichier image: </label>
        <input id="FormFile" name="FormFile" type="file" accept="image/*" class="form-control-file" />
        <span asp-validation-for="FormFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Téléverser" class="btn btn-primary" />
    </div>
</form>