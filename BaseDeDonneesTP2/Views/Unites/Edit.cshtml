@model BaseDeDonneesTP2.ViewModel.ImageUploadVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Unite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Unite.UniteId" />
            <div class="form-group">
                <label asp-for="Unite.FactionId" class="control-label"></label>
                <select asp-for="Unite.FactionId" class="form-control" asp-items="ViewBag.FactionId"></select>
                <span asp-validation-for="Unite.FactionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unite.Nom" class="control-label"></label>
                <input asp-for="Unite.Nom" class="form-control" />
                <span asp-validation-for="Unite.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unite.CoutEnPoint" class="control-label"></label>
                <input asp-for="Unite.CoutEnPoint" class="form-control" />
                <span asp-validation-for="Unite.CoutEnPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FormFile">Fichier image: </label>
                <input id="FormFile" name="FormFile" type="file" accept="image/*" class="form-control-file" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
